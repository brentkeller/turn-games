{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "build",
    "paths": {
      "*": ["node_modules/"],
      "typings/*": ["src/typings/*"]
    },
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
